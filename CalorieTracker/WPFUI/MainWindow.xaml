<Window x:Class="WPFUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFUI"
        xmlns:viewModel="clr-namespace:WPFUI.MVVM.ViewModel"
        xmlns:view="clr-namespace:WPFUI.MVVM.View"
        mc:Ignorable="d"
        Title="Caloire Tracker" Height="450" Width="800">

    <Window.DataContext>
        <viewModel:FoodItemsViewModel/>
    </Window.DataContext>

    <Border MaxWidth="300"
            Margin="10 10 10 10">
        
  
        <StackPanel Orientation="Vertical">
            
            <StackPanel Orientation="Horizontal">
                <TextBlock Text = "Name" 
                           Width = "100" 
                           Margin = "3 5 3 5"/>

                <TextBlock Text = "Calories" 
                           Width = "50" 
                           Margin = "0 5 3 5"/>

                <TextBlock Text = "Units" 
                           Width = "30" 
                           Margin = "0 5 3 5"
                           TextWrapping="Wrap"
                           TextAlignment="Center"/>

                <TextBlock Text = "Total Calories" 
                           Width = "50"
                           TextAlignment="Center"
                           TextWrapping="Wrap"
                           Margin = "0 5 3 5"/>
            </StackPanel>
            
            <ItemsControl ItemsSource = "{Binding Path = FoodItems}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>

                        <StackPanel Orientation = "Horizontal">
                            <TextBox Text = "{Binding Path = Name, Mode = TwoWay}" 
                                     Width = "100" 
                                     Margin = "3 5 3 5"/>

                            <TextBox Text = "{Binding Path = Calories, Mode = TwoWay}" 
                                     Width = "50" 
                                     Margin = "0 5 3 5"/>

                            <TextBox Text = "{Binding Path = Count, Mode = TwoWay}" 
                                     Width = "25" Margin = "0 5 3 5"
                                     Padding="1"
                                     TextAlignment="Center"/>

                            <TextBox Text = "{Binding Path = TotalCalories, Mode = OneWay}" 
                                     Width = "50" 
                                     Margin = "0 5 3 5"/>
                            
                            <Button Content="Delete" Command="{Binding DeleteFoodItemCommand}" CommandParameter="{Binding}" />
                        
                        </StackPanel>

                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <ItemsControl ItemsSource = "{Binding Path = FoodItems}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>

                        <StackPanel Orientation = "Horizontal">
                            <TextBox Text = "{Binding Path = Name, Mode = TwoWay}" 
                                     Width = "100" 
                                     Margin = "3 5 3 5"/>

                            <TextBox Text = "{Binding Path = Calories, Mode = TwoWay}" 
                                     Width = "50" 
                                     Margin = "0 5 3 5"/>

                            <TextBox Text = "{Binding Path = Count, Mode = TwoWay}" 
                                     Width = "25" Margin = "0 5 3 5"
                                     Padding="1"
                                     TextAlignment="Center"/>

                            <TextBox Text = "{Binding Path = TotalCalories, Mode = OneWay}" 
                                     Width = "50" 
                                     Margin = "0 5 3 5"/>
                        </StackPanel>

                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <StackPanel Orientation="Horizontal">

                <TextBlock Text="Total Calories"
                           Margin = "0 0 5 0"/>

                <TextBlock Text="{Binding Path = TotalCalories}"
                       Width="100"
        
                       Margin = "0 0 0 0"/>

            </StackPanel>

        </StackPanel>
    </Border>
</Window>
