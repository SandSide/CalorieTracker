<Application x:Class="WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WPF"
             xmlns:viewModel="clr-namespace:WPF.MVVM.ViewModel"
             xmlns:view="clr-namespace:WPF.MVVM.View"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <DataTemplate DataType="{x:Type viewModel:FoodItemsViewModel}">
                        <view:CalorieIntakeView/>
                    </DataTemplate>
                </ResourceDictionary>

                <ResourceDictionary Source="ResourceDictonaries/MainMenuDictonary.xaml"/>
                <ResourceDictionary Source="ResourceDictonaries/FoodEntriesDictonary.xaml"/>
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>


 


    </Application.Resources>
</Application>
